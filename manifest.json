{
  "manifest_version": 3,
  "name": "Docmost Clipper",
  "version": "1.0",
  "description": "Clip web pages to your self-hosted Docmost instance.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Clip to Docmost"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}